<odoo>

    <record id="res_employee_form_view" model="ir.ui.view">
        <field name="name">res_employee_form_view</field>
        <field name="model">res.employee</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="date_of_birth"/>
                            <field name="address"/>
                        </group>
                        <group>
                            <field name="age_constrain"/>
                            <field name="show_model_id"/>
                            <field name="show_model_related"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="res_employee_tree_view" model="ir.ui.view">
        <field name="name">ResEmployee Tree View</field>
        <field name="model">res.employee</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="date_of_birth"/>
                <field name="address"/>
                <field name="age"/>
            </tree>
        </field>
    </record>
    <record id="action_employee" model="ir.actions.act_window">
        <field name="name">Action Employee</field>
        <field name="res_model">res.employee</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="view_id" ref="res_employee_tree_view"/>
    </record>
    <menuitem
            id="res_employee_menu_item_root"
            name="Employees"
            sequence="75"/>
    <menuitem
            id="res_employee_menu_item"
            name="Employees"
            parent="res_employee_menu_item_root"
            sequence="75"
            action="action_employee"
    />
</odoo>